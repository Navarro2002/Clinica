@model Clinica.Models.Usuario
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Crear Cuenta</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
        }

        body {
            min-height: 100vh;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .register-card {
            max-width: 780px;
            width: 100%;
            margin: auto;
            border-radius: 10px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.15);
            background: #fff;
            overflow: hidden;
        }

        .register-header {
            background: #f5f6fa;
            padding: 32px 24px 18px 24px;
            text-align: center;
        }

        .register-title {
            font-size: 2.2rem;
            font-weight: 500;
            margin: 0;
        }

        .register-body {
            padding: 24px;
        }

        .register-footer {
            background: #f5f6fa;
            text-align: center;
            font-size: 1rem;
            padding: 18px 0 10px 0;
            border-top: 1px solid #e0e0e0;
        }

        .btn-custom {
            background: #1276ff;
            color: #fff;
            font-size: 1.1rem;
            border-radius: 7px;
            padding: 10px 0;
            border: none;
            width: 100%;
        }

            .btn-custom:hover {
                background: #0a5be0;
            }

        .register-footer a {
            color: #1276ff;
            text-decoration: underline;
        }

        .text-danger {
            font-size: 0.875rem;
            display: block;
            margin-top: 0.25rem;
        }

        .field-validation-error {
            color: #dc3545;
            font-size: 0.875rem;
            display: block;
            margin-top: 0.25rem;
        }

        .field-validation-valid {
            display: none;
        }

        .validation-summary-errors {
            margin-bottom: 1rem;
        }

        .validation-summary-errors ul {
            margin: 0;
            padding-left: 1.5rem;
        }

        .validation-summary-valid {
            display: none;
        }

        /* Ocultar lista vacía en ValidationSummary */
        .validation-summary-errors ul:empty {
            display: none;
        }

        .validation-summary-errors ul li:empty {
            display: none;
        }
    </style>
</head>
<body>
    <div class="register-card">
        <div class="register-header">
            <h2 class="register-title">Crear Cuenta</h2>
        </div>
        <div class="register-body">
            @using (Html.BeginForm("Register", "Usuario", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger", style = "display:none;" })
                
                <div class="row mb-2">
                    <div class="col-md-6 mb-2">
                        @Html.TextBoxFor(m => m.NumeroDocumentoIdentidad, new { @class = "form-control", placeholder = "Nro. Documento" })
                        @Html.ValidationMessageFor(m => m.NumeroDocumentoIdentidad, "", new { @class = "text-danger small" })
                    </div>
                    <div class="col-md-6 mb-2">
                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombres" })
                        @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger small" })
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-6 mb-2">
                        @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", placeholder = "Apellidos" })
                        @Html.ValidationMessageFor(m => m.Apellido, "", new { @class = "text-danger small" })
                    </div>
                    <div class="col-md-6 mb-2">
                        @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", placeholder = "Correo", type = "email" })
                        @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger small" })
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-6 mb-2">
                        @Html.PasswordFor(m => m.Clave, new { @class = "form-control", placeholder = "Contraseña" })
                        @Html.ValidationMessageFor(m => m.Clave, "", new { @class = "text-danger small" })
                    </div>
                    <div class="col-md-6 mb-2">
                        <input type="password" class="form-control" name="ConfirmarClave" placeholder="Confirmar Contraseña" />
                        @Html.ValidationMessage("ConfirmarClave", "", new { @class = "text-danger small" })
                    </div>
                </div>
                <div class="d-grid mb-2">
                    <button type="submit" class="btn btn-custom">Crear Cuenta</button>
                </div>
            }
            
            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success text-center py-2 mt-3" role="alert" id="success-alert">
                    @ViewBag.Success
                </div>
            }
        </div>
        <div class="register-footer">
            <a href="/Login/Index">¿Ya tienes una cuenta? Acceder</a>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Mostrar ValidationSummary solo si tiene errores
            var validationSummary = $('.validation-summary-errors');
            if (validationSummary.length > 0) {
                var errorList = validationSummary.find('ul li');
                if (errorList.length > 0 && errorList.text().trim() !== '') {
                    validationSummary.show();
                } else {
                    validationSummary.hide();
                }
            }

            // Ocultar mensaje de éxito después de 5 segundos
            var successAlert = $('#success-alert');
            if (successAlert.length > 0) {
                setTimeout(function () {
                    successAlert.fadeOut('slow');
                }, 5000);
            }
        });
    </script>
</body>
</html>