@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #1276ff;
            min-height: 100vh;
        }
        .login-card {
            max-width: 400px;
            margin: 60px auto;
            box-shadow: 0 8px 32px rgba(0,0,0,0.12);
            border-radius: 12px;
            background: #fff;
        }
        .login-title {
            font-size: 2rem;
            font-weight: 500;
            text-align: center;
            margin-top: 24px;
            margin-bottom: 0;
        }
        .login-footer {
            text-align: center;
            font-size: 0.95rem;
            padding: 12px 0 4px 0;
        }
    </style>
</head>
<body>
    <div class="login-card p-4">
        <h2 class="login-title">Login</h2>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center py-2 mb-3" role="alert">
                @ViewBag.Error
            </div>
        }
        <form method="post" action="/Usuario/Login">
            <div class="mb-3">
                <input type="text" class="form-control bg-light" name="NumeroDocumentoIdentidad" placeholder="Nro Documento" required value="75757575" />
            </div>
            <div class="mb-3">
                <input type="password" class="form-control bg-light" name="Clave" placeholder="Contraseña" required />
            </div>
            <div class="d-grid mb-2">
                <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
            </div>
        </form>
        <div class="login-footer border-top">
            <a href="/Usuario/Register">¿Necesitas una cuenta? Registrate!</a>
        </div>
    </div>
</body>
</html>
