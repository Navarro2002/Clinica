@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
        }

        body {
            min-height: 100vh;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            max-width: 520px;
            width: 100%;
            margin: auto;
            border-radius: 10px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.15);
            background: #fff;
            overflow: hidden;
        }

        .login-header {
            background: #f5f6fa;
            padding: 32px 24px 18px 24px;
            text-align: center;
        }

        .login-title {
            font-size: 2.2rem;
            font-weight: 500;
            margin: 0;
        }

        .login-body {
            padding: 24px;
        }

        .login-footer {
            background: #f5f6fa;
            text-align: center;
            font-size: 1rem;
            padding: 18px 0 10px 0;
            border-top: 1px solid #e0e0e0;
        }

        .btn-custom {
            background: #1276ff;
            color: #fff;
            font-size: 1.1rem;
            border-radius: 7px;
            padding: 10px 0;
            border: none;
        }

        .btn-custom:hover {
            background: #0a5be0;
        }

        .login-footer a {
            color: #1276ff;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="login-header">
            <h2 class="login-title">Login</h2>
        </div>
        <div class="login-body">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center py-2 mb-3" role="alert">
                    @ViewBag.Error
                </div>
            }
            <form method="post" action="/Login/Index">
                @Html.AntiForgeryToken()
                <input type="text" class="form-control mb-3" name="NumeroDocumentoIdentidad" placeholder="Nro Documento" required />
                <input type="password" class="form-control mb-3" name="Clave" placeholder="Contraseña" required />
                <div class="d-grid mb-2">
                    <button type="submit" class="btn btn-custom">Iniciar Sesión</button>
                </div>
            </form>
        </div>
        <div class="login-footer">
            <a href="/Usuario/Register">¿Necesitas una cuenta? Registrate!</a>
        </div>
    </div>
</body>
</html>
